<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center"
        android:textColor="#ff4533"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="Sửa Thông Tín Sach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center"
        android:textColor="#32FF35"
     android:id="@+id/masach"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_Tensach"
        android:hint="Nhập Vào Tên Sách"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_Tien"
        android:hint="Nhập Vào Giá Tiền"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_TrangSach"
        android:hint="Nhập Vào Trang Sách"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spnLoaiS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>